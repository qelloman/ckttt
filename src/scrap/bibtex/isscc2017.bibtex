@INPROCEEDINGS{7870315, 
author={H. Hwang and H. Lee and H. Kim and Y. Chae}, 
booktitle={2017 IEEE International Solid-State Circuits Conference (ISSCC)}, 
title={9.7 A 6.9mW 120fps 28 #x00D7;50 capacitive touch sensor with 41.7dB SNR for 1mm stylus using current-driven #x0394; #x03A3; ADCs}, 
year={2017}, 
volume={}, 
number={}, 
