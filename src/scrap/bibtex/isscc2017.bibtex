@INPROCEEDINGS{7870342, 
author={M. Kosunen and J. Lemberg and M. Martelius and E. Roverato and T. Nieminen and M. Englund and K. Stadius and L. Anttila and J. Pallonen and M. Valkama and J. Ryynänen}, 
