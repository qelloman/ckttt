@INPROCEEDINGS{7870287, 
author={J. Im and D. Freitas and A. Roldan and R. Casey and S. Chen and A. Chou and T. Cronin and K. Geary and S. McLeod and L. Zhou and I. Zhuang and J. Han and S. Lin and P. Upadhyaya and G. Zhang and Y. Frans and K. Chang}, 
