@INPROCEEDINGS{7870370, 
author={C. Erdmann and E. Cullen and D. Brouard and R. Pelliconi and B. Verbruggen and J. Mcgrath and D. Collins and M. De La Torre and P. Gay and P. Lynch and P. Lim and A. Collins and B. Farley}, 
