@INPROCEEDINGS{7870290, 
author={W. Rahman and D. Yoo and J. Liang and A. Sheikholeslami and H. Tamura and T. Shibasaki and H. Yamaguchi}, 
booktitle={2017 IEEE International Solid-State Circuits Conference (ISSCC)}, 
title={6.6 A 22.5-to-32Gb/s 3.2pJ/b referenceless baud-rate digital CDR with DFE and CTLE in 28nm CMOS}, 
year={2017}, 
