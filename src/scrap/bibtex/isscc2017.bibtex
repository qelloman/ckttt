month={Feb},}
@INPROCEEDINGS{7870267, 
author={M. Kobayashi and Y. Onuki and K. Kawabata and H. Sekine and T. Tsuboi and Y. Matsuno and H. Takahashi and T. Koizumi and K. Sakurai and H. Yuzurihara and S. Inoue and T. Ichikawa}, 
